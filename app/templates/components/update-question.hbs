{{#if updateQuestionForm}}
  <h4>{{question.title}}</h4>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=question.title}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>
      <div class="form-group">
        <label for="content">Full question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <button class="btn btn-sm btn-default"{{action 'update' question}}>Save</button>
    </form>

{{else}}
  <button class="btn btn-sm btn-default" {{action 'updateQuestionForm'}}>Update question</button>
{{/if}}
