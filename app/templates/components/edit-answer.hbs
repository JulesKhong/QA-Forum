{{#if updateAnswerForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author  placeholder=answer.author}}
      </div>
      <label for="content">Answer</label>
      {{input value=content  placeholder=answer.content}}
      <button {{action 'update' answer}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-sm btn-default" {{action 'updateAnswerForm'}}>Update this answer</button>
{{/if}}
  <button id="delete" class="btn btn-sm btn-default" {{action 'deleteAnswer' answer}}>Delete this answer</button>
