<h3>New question</h3>
<form>
  <div class="form-group">
    <label for="title">Title:</label>
    {{input value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <label for="content">Full question:</label>
    {{textarea value=content id="content"}}
  </div>
  <button class="btn btn-default"{{action 'saveQuestion'}}>Ask</button>
</form>
